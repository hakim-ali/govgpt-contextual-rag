# REQUIRED: API Keys
TOGETHER_API_KEY=your_together_api_key_here  #Reranker (together.ai)

# LiteLLM Configuration for OpenAI-compatible endpoints
OPENAI_API_KEY=litellm_api_key_here
OPENAI_API_BASE=https://your-litellm-endpoint.com/v1

# REQUIRED: File Paths
PDF_FOLDER=./documents
ARTIFACT_DIR=./artifacts

# Model Configuration (these are good defaults)
RAG_MODEL=azure_ai/deepseek-v3-0324
EMBED_MODEL=huggingface/Qwen/Qwen3-Embedding-8B

# Search Configuration (optimized defaults)
VECTOR_K=75         # Number of Vector search results
BM25_K=75           # Number of BM25 search results
RRF_K=60            # Number of chunks after reciprocal rank fusion
TOP_K=20            # Number of chunks after reranking
TOP_N=5             # Final number of chunks to use

# Processing Configuration
CHUNK_SIZE=250
CHUNK_OVERLAP=30
MAX_WORKERS=8

# Docling Configuration  
USE_DOCLING=true
# DOCLING_SERVER_URL=http://your-docling-server:5001/v1alpha/convert/file

# Embedding API Configuration (OpenAI compatible)
EMBEDDING_API_BASE=https://litellm.sandbox.dge.gov.ae/v1
EMBEDDING_API_KEY=litellm_api_key_here